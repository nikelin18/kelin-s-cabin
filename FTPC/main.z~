#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <unistd.h>
#include "ftp.h"

int main(int argc,const char* argv[])
{
	//创建FTP客户端
	FTPClient* ftp = NULL;

	if(2 == argc)
	{
		ftp = create_FTPClient(argv[1],21);
	}
	else if(3 == argc)
	{
		short port = atoi(argv[2]);
		ftp = create_FTPClient(argv[1],port);
	}
	else
	{
		printf("use:ftp xxx.xxx.xxx.xxx [port]\n");
		return EXIT_FAILURE;
	}
	
	//输入用户名
	char user[256] = {};
	printf("Name:");
	scanf("%s",user);

	//密码并登录



}
